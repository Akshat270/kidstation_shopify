<script>
document.addEventListener('DOMContentLoaded', function(){
  var track = document.getElementById('Slider-{{ section.id }}');
  if (!track) return;

  // The thumb we added just after the <ul>
  var thumb = track.parentElement.querySelector('.nf-progress');

  function isMobile(){ return window.matchMedia('(max-width: 989px)').matches; }

  // Hide native scrollbar on mobile, keep on desktop
  (function injectCSS(){
    var id = 'hide-scroll-{{ section.id }}';
    if (document.getElementById(id)) return;
    var css = `
      @media (max-width: 989px){
        #Slider-{{ section.id }}{ scrollbar-width: none !important; }
        #Slider-{{ section.id }}::-webkit-scrollbar{ display: none !important; width:0 !important; height:0 !important; }
      }
    `;
    var style = document.createElement('style');
    style.id = id;
    style.textContent = css;
    document.head.appendChild(style);
  })();

  function syncMode(){
    if (!thumb) return;
    if (isMobile()){
      track.style.overflowX = 'auto';   // allow swipe/drag
      thumb.style.display = 'block';    // show custom bar
    } else {
      track.style.overflowX = '';       // Dawn controls desktop
      thumb.style.display = 'none';     // hide custom bar
    }
  }

  function moveThumb(){
    if (!thumb || !isMobile()) { if(thumb) thumb.style.transform = 'translateX(0)'; return; }
    var barWidth  = thumb.offsetWidth || 70;     // fixed thumb ~70px
    var viewW     = track.clientWidth;
    var contentW  = track.scrollWidth;
    var maxScroll = Math.max(1, contentW - viewW);
    var ratio     = Math.min(1, Math.max(0, track.scrollLeft / maxScroll));
    var travel    = Math.max(0, viewW - barWidth);
    thumb.style.transform = 'translateX(' + (ratio * travel) + 'px)';
  }

  // Bind listeners
  track.addEventListener('scroll', moveThumb, { passive: true });
  window.addEventListener('resize', function(){
    syncMode();
    clearTimeout(window.__fb_rz);
    window.__fb_rz = setTimeout(moveThumb, 120);
  });

  // Nudge after images load (card widths can change)
  track.querySelectorAll('img').forEach(function(img){
    if (!img.complete){
      img.addEventListener('load', function(){ requestAnimationFrame(moveThumb); }, { once:true });
    }
  });

  // Initial
  syncMode();
  requestAnimationFrame(moveThumb);
});
</script>
