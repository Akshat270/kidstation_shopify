<script>
/*! card-product runtime — ES5-safe (hover swap + swatch lock, global) */
(function () {
  /* prevent double bind if snippet included multiple times */
  if (window.__CARD_PRODUCT_RUNTIME_V2__) {
    console.log('CARD RUNTIME V2: skipped (already initialized)');
    return;
  }
  window.__CARD_PRODUCT_RUNTIME_V2__ = true;
  console.log('CARD RUNTIME V2: initialized');
  
  /* ===============================
     URL helpers for Shopify images
  =================================*/
  var SIZE_STEPS = [165,360,533,720,940,1066];

  function toHttps(u){
    return (u||'').replace(/^\/\//,'https://');
  }

  function stripSizeToken(u){
    return (u||'').replace(/_(?:\d+x|master)(\.[a-z0-9]+)(\?|$)/i,'$1$2');
  }

  function hasExt(u){
    return /\.(jpg|jpeg|png|webp|avif|gif)(\?|$)/i.test(u||'');
  }

  function withSize(url,w){
    url = toHttps(url||'');
    if(!hasExt(url)) return url;
    var clean = stripSizeToken(url);
    return clean.replace(/(\.(?:jpg|jpeg|png|webp|avif|gif))(\?|$)/i,'_'+w+'x$1$2');
  }

  function buildSrcset(base){
    if(!hasExt(base)) return '';
    var out=[], i;
    for(i=0;i<SIZE_STEPS.length;i++){
      out.push(withSize(base,SIZE_STEPS[i])+' '+SIZE_STEPS[i]+'w');
    }
    return out.join(', ');
  }

  /* ===============================
     DOM helpers
  =================================*/
  function matches(el, sel){
    return el.matches ? el.matches(sel) : el.msMatchesSelector && el.msMatchesSelector(sel);
  }

  function closest(el, sel){
    while(el && el.nodeType===1){
      if(matches(el,sel)) return el;
      el = el.parentElement;
    }
    return null;
  }

  function qs(root, sel){ return (root||document).querySelector(sel); }
  function qsa(root, sel){ return (root||document).querySelectorAll(sel); }

  function getCard(el){
    return closest(el,'.product-card-wrapper');
  }

  function getMedia(card){
    if(!card) return null;
    return qs(card,'.card__media .media') || qs(card,'.card__media');
  }

  /* return NodeList of ALL imgs in media block (primary + hover img if present) */
  function getAllImgs(card){
    var media = getMedia(card);
    if(!media) return [];
    return media.querySelectorAll('img');
  }

  /* ===============================
     Image + Price updaters
  =================================*/
  function hardSwapAllCardImages(card, newUrl){
    if(!card || !newUrl) return;

    // normalize to https://
    var clean = newUrl;
    if(clean.slice(0,2)==='//'){ clean = 'https:' + clean; }

    var imgs = getAllImgs(card);
    if(!imgs.length) return;

    // lock hover so theme can't override
    card.setAttribute('data-variant-lock','1');

    // remove any data-swap flicker on the media wrapper
    var mediaWrap = getMedia(card);
    if(mediaWrap){
      mediaWrap.removeAttribute('data-swap');
      // also remove "media--hover-effect" because we want no flip while locked
      mediaWrap.classList.remove('media--hover-effect');
    }

    // force each img tag inside that card to display the same chosen variant img
    for(var i=0;i<imgs.length;i++){
      var im = imgs[i];
      im.removeAttribute('srcset');
      im.removeAttribute('data-srcset');
      im.removeAttribute('sizes');
      im.removeAttribute('data-sizes');
      im.removeAttribute('data-ll-status');
      im.setAttribute('loading','lazy');
      im.src = clean;
      im.style.opacity = '1';
    }
  }

  function getMoneyFormatter(card, root){
    if(card.__moneyFormatter) return card.__moneyFormatter;

    var prefix='', suffix='';
    try{
      var fmt = card.getAttribute('data-money-format')
        || (window.Shopify && window.Shopify.money_format)
        || '{{amount}}';
      fmt = (fmt||'').replace(/&nbsp;/g,' ');
      var m = fmt.match(/^(.*)\{\{amount.*?\}\}(.*)$/);
      if(m){
        prefix = m[1];
        suffix = m[2];
      }
    }catch(e){}

    function formatCents(cents){
      var n = Number(cents)/100;
      if(!isFinite(n)) return '0';
      try {
        return n.toLocaleString(undefined,{
          minimumFractionDigits:0,
          maximumFractionDigits:2
        });
      } catch(e){
        return (Math.round(n*100)/100)
          .toString()
          .replace(/\.00$/,'')
          .replace(/(\.\d)0$/,'$1');
      }
    }

    card.__moneyFormatter = function(c){
      return prefix + formatCents(c) + suffix;
    };
    return card.__moneyFormatter;
  }

  function updatePrice(card, priceCents, compareCents){
    var priceNum   = Number(priceCents)||0;
    var compareNum = Number(compareCents)||0;
    var onSale     = compareNum > priceNum;

    var roots = qsa(card,'.price');
    for(var i=0;i<roots.length;i++){
      var root = roots[i];
      var fm   = getMoneyFormatter(card, root);

      var currentEl = qs(root,'.price-item--current');
      var compareEl = qs(root,'.price-item--compare');
      var offEl     = qs(root,'.price-item--off');

      if(currentEl){
        currentEl.textContent = fm(priceNum);
        if(onSale){
          if(compareEl){
            compareEl.textContent = fm(compareNum);
            compareEl.classList.remove('hidden');
            compareEl.style.display='';
          }
          if(offEl){
            var pct = Math.round(
              (1 - priceNum/Math.max(compareNum,1))*100
            );
            offEl.textContent = '(-' + (isFinite(pct)?pct:0) + '%)';
            offEl.classList.remove('hidden');
            offEl.style.display='';
          }
          root.classList.add('price--on-sale');
        } else {
          if(compareEl){
            compareEl.textContent='';
            compareEl.classList.add('hidden');
            compareEl.style.display='none';
          }
          if(offEl){
            offEl.textContent='';
            offEl.classList.add('hidden');
            offEl.style.display='none';
          }
          root.classList.remove('price--on-sale');
        }
        continue;
      }

      /* Dawn-style price blocks fallback */
      var regWrap = qs(root,'.price__regular');
      var saleWrap = qs(root,'.price__sale');
      var regItem  = regWrap ? qs(regWrap,'.price-item--regular') : null;
      var saleItem = saleWrap ? qs(saleWrap,'.price-item--sale') : null;
      var compItem = saleWrap ? qs(saleWrap,'.price-item--regular') : null;
      if(!regItem)  regItem  = qs(root,':scope .price-item--regular:not(.price-item--sale)');
      if(!saleItem) saleItem = qs(root,':scope .price-item--sale');

      if(regWrap) regWrap.classList.toggle('hidden',!!onSale);
      if(saleWrap) saleWrap.classList.toggle('hidden',!onSale);
      root.classList.toggle('price--on-sale',!!onSale);

      if(onSale){
        if(saleItem) saleItem.textContent = fm(priceNum);
        if(compItem) compItem.textContent = fm(compareNum);
      } else {
        if(regItem)  regItem.textContent  = fm(priceNum);
        if(saleItem) saleItem.textContent = fm(priceNum);
        if(compItem) compItem.textContent = '';
      }
    }
  }

  function updateATC(card, id, available){
    var hid = qs(card,'input.product-variant-id');
    if(hid) hid.value = id;

    var btn = qs(card,'.quick-add__submit, .product-card__add-btn');
    if(!btn) return;

    if(String(available) === 'true'){
      btn.removeAttribute('disabled');
      var s1 = qs(btn,'span:not(.sold-out-message)') || qs(btn,'span');
      if(s1){
        s1.textContent = (window.theme
                           && window.theme.strings
                           && window.theme.strings.addToCart)
                          || 'Add to cart';
      }
    } else {
      btn.setAttribute('disabled','disabled');
      var s2 = qs(btn,'.sold-out-message') || qs(btn,'span');
      if(s2){
        s2.textContent = (window.theme
                           && window.theme.strings
                           && window.theme.strings.soldOut)
                          || 'Sold out';
      }
    }
  }

  /* ===============================
     Swatches — smooth drag scroll
  =================================*/
  var swatchDrag = {
    active:false,
    moved:false,
    startX:0,
    startScroll:0,
    srcUL:null
  };

  function enableDragScroll(ul){
    if(!ul || ul.__dragBound) return;
    ul.__dragBound = true;

    ul.addEventListener('pointerdown', function(e){
      if (closest(e.target, '.swatch-chip')) return;
      swatchDrag.active = true;
      swatchDrag.moved = false;
      swatchDrag.startX = e.clientX;
      swatchDrag.startScroll = ul.scrollLeft;
      swatchDrag.srcUL = ul;
      if(ul.setPointerCapture) ul.setPointerCapture(e.pointerId);
      ul.style.cursor = 'grabbing';
    });

    ul.addEventListener('pointermove', function(e){
      if(!swatchDrag.active || swatchDrag.srcUL !== ul) return;
      var dx = e.clientX - swatchDrag.startX;
      if(Math.abs(dx) > 6) swatchDrag.moved = true;
      ul.scrollLeft = swatchDrag.startScroll - dx;
    });

    function end(){
      if(swatchDrag.srcUL === ul){
        swatchDrag.active = false;
        swatchDrag.srcUL = null;
        ul.style.cursor = 'grab';
        setTimeout(function(){ swatchDrag.moved = false; }, 0);
      }
    }

    ul.addEventListener('pointerup', end);
    ul.addEventListener('pointercancel', end);
    ul.addEventListener('mouseleave', end);

    ul.addEventListener('click', function(e){
      if(swatchDrag.moved && !closest(e.target,'.swatch-chip')){
        e.preventDefault();
        e.stopImmediatePropagation();
      }
    }, true);
  }

  function initSwatchScrollers(){
    var lists=qsa(document,'.swatch-list');
    for(var i=0;i<lists.length;i++){
      enableDragScroll(lists[i]);
    }
  }

  if(document.readyState==='loading'){
    document.addEventListener('DOMContentLoaded', initSwatchScrollers);
  } else {
    initSwatchScrollers();
  }

  new MutationObserver(function(muts){
    for(var i=0;i<muts.length;i++){
      var m=muts[i];
      if(!m.addedNodes) continue;
      for(var j=0;j<m.addedNodes.length;j++){
        var n=m.addedNodes[j];
        if(!(n && n.nodeType===1)) continue;
        if(n.matches && n.matches('.swatch-list')) enableDragScroll(n);
        var inner = n.querySelectorAll ? n.querySelectorAll('.swatch-list') : [];
        for(var k=0;k<inner.length;k++){
          enableDragScroll(inner[k]);
        }
      }
    }
  }).observe(document.documentElement,{childList:true,subtree:true});

  /* ===============================
     Swatch activation + LOCK
  =================================*/
  function activateChip(chip, e){
    if(!chip) return;
    if(swatchDrag.moved) return; // ignore if user was scrolling horizontally

    var card = getCard(chip);
    if(!card) return;

    // mark this card as "locked" (turns off hover flip)
    card.setAttribute('data-variant-lock','1');

    // highlight active swatch
    var row = closest(chip,'.swatch-list');
    if(row){
      var chips = qsa(row,'.swatch-chip');
      for(var i=0;i<chips.length;i++){
        chips[i].classList.remove('is-active');
      }
    }
    chip.classList.add('is-active');

    // now update image/price/ATC using chip dataset
    requestAnimationFrame(function(){
      var master = chip.getAttribute('data-image-master'); // variant image URL
      var price  = parseInt(chip.getAttribute('data-price')||'0',10);
      var comp   = parseInt(chip.getAttribute('data-compare')||'0',10);
      var id     = chip.getAttribute('data-variant-id');
      var avail  = chip.getAttribute('data-available');

      if(master){
        hardSwapAllCardImages(card, master);
      }

      updatePrice(card, price, comp);
      updateATC(card, id, avail);
    });

    // UNLOCK when pointer leaves entire card so next hover can work again
    function unlock(){
      card.removeAttribute('data-variant-lock');
      card.removeEventListener('mouseleave', unlock);
      card.removeEventListener('pointerleave', unlock);
      card.removeEventListener('touchend', unlock);
    }
    card.addEventListener('mouseleave', unlock, { once:true });
    card.addEventListener('pointerleave', unlock, { once:true });
    card.addEventListener('touchend', unlock, { once:true });

    if(e && e.preventDefault) e.preventDefault();
    if(e && e.stopPropagation) e.stopPropagation();
  }

  /* global click/keyboard/touch for swatches */
  document.addEventListener('click', function(e){
    var chip = closest(e.target,'.swatch-chip');
    if(!chip) return;
    activateChip(chip, e);
  }, true);

  document.addEventListener('keydown', function(e){
    if(e.key !== 'Enter' && e.key !== ' ') return;
    var chip = closest(e.target,'.swatch-chip');
    if(!chip) return;
    activateChip(chip, e);
  }, true);

  document.addEventListener('pointerup', function(e){
    if(e.pointerType === 'touch' || e.pointerType === 'pen'){
      var chip = closest(e.target,'.swatch-chip');
      if(!chip) return;
      activateChip(chip, e);
    }
  }, true);

  /* ===============================
     Card-wide navigation (safe full-card click)
  =================================*/
  function getCardLink(card){
    var a = qs(card,'.card__heading a.full-unstyled-link');
    if(a && a.href) return a;
    a = qs(card,'a[href*="/products/"]');
    return (a && a.href) ? a : null;
  }

  document.addEventListener('click', function(e){
    var card = getCard(e.target);
    if(!card) return;

    // ignore internal controls
    if (closest(e.target,'.pc-wish') ||
        closest(e.target,'.swatch-list, .swatch-chip') ||
        closest(e.target,'a,button,input,select,textarea,label') ||
        e.button !== 0) {
      return;
    }

    var link = getCardLink(card);
    if(link && link.href){
      e.preventDefault();
      window.location.href = link.href;
    }
  }, true);

  /* ===============================
     Hover-effect sanity + preload
  =================================*/
  function enforceHover(root){
    root = root || document;
    var medias = qsa(root,'.card__media .media');
    for(var i=0;i<medias.length;i++){
      var media = medias[i];
      var imgs = media.querySelectorAll('img');
      if(imgs.length>1){
        media.classList.add('media--hover-effect');
      } else {
        media.classList.remove('media--hover-effect');
      }
    }
  }

  function markReadyWhenLoaded(img){
    if (!img) return;
    function ready(){
      var media = closest(img, '.media');
      if (media) media.classList.add('is-ready');
    }
    if (img.complete) {
      if (typeof img.decode === 'function') {
        img.decode().catch(function(){}).then(ready);
      } else {
        requestAnimationFrame(ready);
      }
      return;
    }
    img.addEventListener('load', ready, { once:true });
    img.addEventListener('error', ready, { once:true });
  }

  function prepareSecondary(root){
    var blocks = qsa(root || document,
      '.product-card-wrapper .card__media .media.media--hover-effect'
    );
    for(var i=0;i<blocks.length;i++){
      var imgs = blocks[i].querySelectorAll('img');
      if(imgs.length > 1){
        var secondary = imgs[1];
        try{
          secondary.setAttribute('loading','eager');
          secondary.setAttribute('fetchpriority','high');
          secondary.setAttribute('decoding','async');
        }catch(e){}
        // force browser to resolve now so hover is instant
        secondary.src = secondary.currentSrc || secondary.src;
        markReadyWhenLoaded(secondary);
      }
    }
    // safety fallback after 400ms
    setTimeout(function(){
      qsa(document, '.media.media--hover-effect:not(.is-ready)')
        .forEach(function(m){
          m.classList.add('is-ready');
        });
    }, 400);
  }

  if(document.readyState==='loading'){
    document.addEventListener('DOMContentLoaded', function(){
      enforceHover(document);
      prepareSecondary(document);
    });
  } else {
    enforceHover(document);
    prepareSecondary(document);
  }

  new MutationObserver(function(muts){
    // Re-run hover binding & preload whenever images/attrs change
    enforceHover(document);
    prepareSecondary(document);
  }).observe(document.documentElement,{
    childList:true,
    subtree:true,
    attributes:true,
    attributeFilter:['src','srcset']
  });

  /* ===============================
     FORCE secondary swap on hover
     (still works when NOT locked)
  =================================*/
  function bindForcedSwap(root){
    var blocks = (root||document)
      .querySelectorAll('.product-card-wrapper .card__media .media.media--hover-effect');
    for (var i=0;i<blocks.length;i++){
      var el = blocks[i];
      if (el.__forcedSwapBound) continue;
      el.__forcedSwapBound = true;

      if (getComputedStyle(el).pointerEvents === 'none'){
        el.style.pointerEvents = 'auto';
      }

      function cardOf(){
        var n=el;
        while(n && n.nodeType===1){
          if(n.classList && n.classList.contains('product-card-wrapper')){
            return n;
          }
          n=n.parentElement;
        }
        return null;
      }
      function locked(){
        var c = cardOf();
        return !!(c && c.hasAttribute('data-variant-lock'));
      }

      function showSecondary(){
        if (locked()) return;
        el.setAttribute('data-swap','1');
      }
      function hideSecondary(){
        if (locked()) return;
        el.removeAttribute('data-swap');
      }

      el.addEventListener('mouseenter', showSecondary);
      el.addEventListener('mouseleave', hideSecondary);
      el.addEventListener('focusin',  showSecondary);
      el.addEventListener('focusout', hideSecondary);

      el.addEventListener('touchstart', showSecondary, {passive:true});
      el.addEventListener('touchend', function(){
        var self=this;
        setTimeout(function(){ hideSecondary.call(self); }, 220);
      }, {passive:true});
      el.addEventListener('touchcancel', hideSecondary, {passive:true});
    }
  }

  if (document.readyState === 'loading') {
    document.addEventListener('DOMContentLoaded', function(){
      bindForcedSwap(document);
    });
  } else {
    bindForcedSwap(document);
  }

  new MutationObserver(function(muts){
    for (var i=0;i<muts.length;i++){
      var n = muts[i].target;
      bindForcedSwap(n);
      var inner = n.querySelectorAll
        ? n.querySelectorAll('.product-card-wrapper .card__media .media.media--hover-effect')
        : [];
      for (var j=0;j<inner.length;j++){
        bindForcedSwap(inner[j]);
      }
    }
  }).observe(document.documentElement, {
    subtree:true,
    childList:true
  });

  /* ===============================
     Inject minimal CSS overrides
  =================================*/
  var styleTag = document.createElement('style');
  styleTag.textContent =
    '.product-card-wrapper .full-unstyled-link::after{pointer-events:none!important;}' +
    '.swatch-list,.swatch-chip{position:relative;z-index:4;pointer-events:auto;}' +
    '.product-card-wrapper .card__media .media>img{pointer-events:none;will-change:opacity;}' +
    '.product-card-wrapper .media--hover-effect>img:first-child{opacity:1;transition:opacity .25s ease;}' +
    '.product-card-wrapper .media--hover-effect>img+img{opacity:0;transition:opacity .25s ease;}' +
    '.product-card-wrapper .card__media .media.media--hover-effect[data-swap="1"]>img:first-child{opacity:0!important;}' +
    '.product-card-wrapper .card__media .media.media--hover-effect[data-swap="1"]>img+img{opacity:1!important;}';
  document.documentElement.appendChild(styleTag);

})();
</script>

